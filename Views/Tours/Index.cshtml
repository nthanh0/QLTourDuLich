@model IEnumerable<QLTourDuLich.Models.Tour>

@{
    ViewData["Title"] = "Quản lý Tour Du Lịch";
}

<h1>Quản lý Tour Du Lịch</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Tạo Tour Mới
    </a>
</p>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Mã Tour</th>
                    <th>Tên Tour</th>
                    <th>Loại Tour</th>
                    <th>Giá Cơ Bản</th>
                    <th>Thời Gian</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TourId</td>
                        <td>@item.TourName</td>
                        <td>@item.TourType</td>
                        <td>@(item.BasePrice.HasValue ? item.BasePrice.Value.ToString("N0") + " VNĐ" : "")</td>
                        <td>@item.Duration</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.TourId" class="btn btn-sm btn-info">Chi tiết</a>
                            <a asp-action="Edit" asp-route-id="@item.TourId" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.TourId" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
