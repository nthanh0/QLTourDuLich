@model QLTourDuLich.Models.Tour

@{
    ViewData["Title"] = "Xóa Tour";
}

<h1>Xóa Tour</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa tour này?</h3>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã Tour</dt>
            <dd class="col-sm-9">@Model.TourId</dd>
            
            <dt class="col-sm-3">Tên Tour</dt>
            <dd class="col-sm-9">@Model.TourName</dd>
            
            <dt class="col-sm-3">Loại Tour</dt>
            <dd class="col-sm-9">@Model.TourType</dd>
            
            <dt class="col-sm-3">Giá Cơ Bản</dt>
            <dd class="col-sm-9">@(Model.BasePrice?.ToString("N0")) VNĐ</dd>
            
            <dt class="col-sm-3">Thời Gian</dt>
            <dd class="col-sm-9">@Model.Duration</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="TourId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
