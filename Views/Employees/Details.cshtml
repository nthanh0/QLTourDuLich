@model QLTourDuLich.Models.Employee

@{
    ViewData["Title"] = "Chi Tiết Nhân Viên";
}

<h1>Chi Tiết Nhân Viên</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã Nhân Viên</dt>
            <dd class="col-sm-9">@Model.EmployeeId</dd>
            
            <dt class="col-sm-3">Họ Tên</dt>
            <dd class="col-sm-9">@Model.FullName</dd>
            
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            
            <dt class="col-sm-3">Điện Thoại</dt>
            <dd class="col-sm-9">@Model.PhoneNum</dd>
            
            <dt class="col-sm-3">Phòng Ban</dt>
            <dd class="col-sm-9">@Model.Department</dd>
            
            <dt class="col-sm-3">Chức Vụ</dt>
            <dd class="col-sm-9">@Model.Position</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-warning">Chỉnh Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
