@model IEnumerable<QLTourDuLich.Models.Employee>

@{
    ViewData["Title"] = "Quản lý Nhân Viên";
}

<h1>Quản lý Nhân Viên</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm Nhân Viên Mới
    </a>
</p>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Mã NV</th>
                    <th>Họ Tên</th>
                    <th>Email</th>
                    <th>Điện Thoại</th>
                    <th>Phòng Ban</th>
                    <th>Chức Vụ</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeId</td>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNum</td>
                        <td>@item.Department</td>
                        <td>@item.Position</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-info">Chi tiết</a>
                            <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
