@model QLTourDuLich.Models.Employee

@{
    ViewData["Title"] = "Xóa Nhân Viên";
}

<h1>Xóa Nhân Viên</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa nhân viên này?</h3>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã Nhân Viên</dt>
            <dd class="col-sm-9">@Model.EmployeeId</dd>
            
            <dt class="col-sm-3">Họ Tên</dt>
            <dd class="col-sm-9">@Model.FullName</dd>
            
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            
            <dt class="col-sm-3">Phòng Ban</dt>
            <dd class="col-sm-9">@Model.Department</dd>
            
            <dt class="col-sm-3">Chức Vụ</dt>
            <dd class="col-sm-9">@Model.Position</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="EmployeeId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
