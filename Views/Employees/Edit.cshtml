@model QLTourDuLich.Models.Employee

@{
    ViewData["Title"] = "Chỉnh Sửa Nhân Viên";
}

<h1>Chỉnh Sửa Nhân Viên</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Họ Tên</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="PhoneNum" class="form-label">Điện Thoại</label>
                <input asp-for="PhoneNum" class="form-control" />
                <span asp-validation-for="PhoneNum" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Department" class="form-label">Phòng Ban</label>
                <select asp-for="Department" class="form-control">
                    <option value="">-- Chọn phòng ban --</option>
                    <option value="Ban Giám Đốc">Ban Giám Đốc</option>
                    <option value="Điều hành">Điều hành</option>
                    <option value="Kinh doanh">Kinh doanh</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Kế toán">Kế toán</option>
                    <option value="CSKH">CSKH</option>
                    <option value="Hướng dẫn">Hướng dẫn</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Position" class="form-label">Chức Vụ</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <input type="submit" value="Cập Nhật" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
