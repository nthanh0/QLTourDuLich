@model QLTourDuLich.Models.Booking

@{
    ViewData["Title"] = "Xóa Đơn Đặt";
}

<h1>Xóa Đơn Đặt Tour</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa đơn đặt này?</h3>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã Đơn Đặt</dt>
            <dd class="col-sm-9">@Model.BookingId</dd>
            
            <dt class="col-sm-3">Mã Khách Hàng</dt>
            <dd class="col-sm-9">@Model.CustomerId</dd>
            
            <dt class="col-sm-3">Ngày Đặt</dt>
            <dd class="col-sm-9">@(Model.BookingDate.ToString("dd/MM/yyyy"))</dd>
            
            <dt class="col-sm-3">Tổng Tiền</dt>
            <dd class="col-sm-9">@(Model.TotalAmount.HasValue ? Model.TotalAmount.Value.ToString("N0") + " VNĐ" : "")</dd>
            
            <dt class="col-sm-3">Trạng Thái</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
