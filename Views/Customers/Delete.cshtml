@model QLTourDuLich.Models.Customer

@{
    ViewData["Title"] = "Xóa Khách Hàng";
}

<h1>Xóa Khách Hàng</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa khách hàng này?</h3>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã Khách Hàng</dt>
            <dd class="col-sm-9">@Model.CustomerId</dd>
            
            <dt class="col-sm-3">Họ Tên</dt>
            <dd class="col-sm-9">@Model.FullName</dd>
            
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            
            <dt class="col-sm-3">Điện Thoại</dt>
            <dd class="col-sm-9">@Model.Telephone</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="CustomerId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
