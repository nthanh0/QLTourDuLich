@model IEnumerable<QLTourDuLich.Models.Customer>

@{
    ViewData["Title"] = "Quản lý Khách Hàng";
}

<h1>Quản lý Khách Hàng</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm Khách Hàng Mới
    </a>
</p>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Mã KH</th>
                    <th>Họ Tên</th>
                    <th>Email</th>
                    <th>Điện Thoại</th>
                    <th>Địa Chỉ</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustomerId</td>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Telephone</td>
                        <td>@item.Address</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-info">Chi tiết</a>
                            <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
